{{#if updateQuestionForm}}
<h1>Update {{question.title}}</h1>
<div>
    <form>
      <div class="form-group">
        <label for="user">Username</label>
        {{input value=question.user id="user"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=question.title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{#bs-textarea value=question.body}}{{/bs-textarea}}
      </div>
    <button {{action 'update' question}}>Update</button>
  </form>
</div>
  {{else}}
    <button class='btn btn-sm btn-info' {{action 'updateQuestionForm'}}>Edit Question</button>
{{/if}}
